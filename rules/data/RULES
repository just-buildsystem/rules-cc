{ "staged":
  { "doc": ["Stage data to a logical subdirectory."]
  , "target_fields": ["srcs", "deps"]
  , "string_fields": ["stage"]
  , "field_doc":
    { "srcs": ["The files to be staged"]
    , "stage":
